<h1><%= @band.name %></h1>
<form action="<%= band_url(@band) %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token%>">
    <label for="band[name]">
        Name: <input type="string" name ="band[name]" value="<%= @band.name %>">
    </label>
    <br>
    <%= button_to "Submit Change", band_url %>
</form>
